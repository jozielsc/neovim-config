return {
  "williamboman/mason.nvim",
  dependencies = {
    "williamboman/mason-lspconfig.nvim",  -- Para integração com lspconfig
    "neovim/nvim-lspconfig",              -- Para configurar LSPs
  },
  config = function()
    require("mason").setup()
    require("mason-lspconfig").setup({
        ensure_installed = { "ruff" },  -- Garantir que o ruff seja instalado automaticamente
   })
    -- Configuração do LSP para o ruff
    local lspconfig = require("lspconfig")
    lspconfig.ruff.setup({
      settings = {
        python = {
          analysis = {
            disableOrganizeImports = true,
            ignore = { "*" },
          },
        },
      },
    })

  end,
}

